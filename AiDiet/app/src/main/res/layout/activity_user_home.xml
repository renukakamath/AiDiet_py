<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/diet_bg"

    tools:context=".UserHome" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >



		<TextView
			android:id="@+id/textView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:textSize="20dp"

			android:textStyle="bold"
			android:text="View Step Count" />

		<TextView
			android:id="@+id/textView1"
			android:layout_width="200dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="30dp"
			android:textSize="20dp"
			android:textStyle="bold"
			android:gravity="center"
			android:layout_gravity="center"
			android:text="" />
        
        <Button
	        android:id="@+id/bt_health_profile"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Health profile" />


		<Button
			android:id="@+id/bmi"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_gravity="center"
			android:text="BMI" />




		<Button
			android:id="@+id/health"
			style="?android:attr/buttonStyleSmall"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:layout_gravity="center"
			android:text="TODAY'S HEALTH" />






		<Button
	        android:id="@+id/bt_food_intake"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Food intake" />



	
	    <Button
	        android:id="@+id/bt_diet_suggestion"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Suggestions" />
	
	    <Button
	        android:id="@+id/bt_view_discussion"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Suggestions" />
	
	    <Button
	        android:id="@+id/bt_feedbacks"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Feedbacks" />
	

	
	    <Button
	        android:id="@+id/bt_logout"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="15dp"
	        android:layout_gravity="center"
	        android:text="Logout" />
    </LinearLayout>
</ScrollView>